{
  "name": "helpdesk-cap",
  "version": "1.0.0",
  "description": "IT Helpdesk Ticket Management System built with SAP Cloud Application Programming Model (CAP)",
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RameshPrabakar/sap-btp-helpdesk-cap.git"
  },
  "scripts": {
    "start": "cds-serve",
    "dev": "cds watch",
    "setup": "cds deploy --to sqlite:db/helpdesk.db",
    "dev:file": "npm run setup && CDS_ENV=production cds watch",
    "test": "jest --testEnvironment node",
    "build": "cds build"
  },
  "dependencies": {
    "@sap/cds": "^9.7.1",
    "@cap-js/sqlite": "^2.1.3",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@sap/cds-dk": "^9.7.1",
    "@cap-js/cds-test": "^0.2.0",
    "jest": "^29.7.0",
    "supertest": "^7.1.3"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "database": "./db/helpdesk.db"
        }
      }
    }
  },
  "jest": {
    "testTimeout": 20000
  }
}
